@{
    ViewData["Title"] = "Create Poll";
}

<h2 class="mb-3">Create a New Poll</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="title" id="title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="option1" class="form-label">Option 1</label>
        <input name="option1" id="option1" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="option2" class="form-label">Option 2</label>
        <input name="option2" id="option2" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="option3" class="form-label">Option 3</label>
        <input name="option3" id="option3" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Create Poll</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
